{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container my-5">

    <!-- Carousel d'accueil -->
    <div id="heroCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://picsum.photos/1200/400?random=1" class="d-block w-100" alt="E-commerce">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="fw-bold">Bienvenue sur notre boutique en ligne</h2>
                    <p>Découvrez nos meilleures catégories et produits !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/1200/400?random=2" class="d-block w-100" alt="Mode">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="fw-bold">Trouvez votre style parfait</h2>
                    <p>Des vêtements tendance et accessoires uniques.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/1200/400?random=3" class="d-block w-100" alt="Technologie">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="fw-bold">Les dernières innovations</h2>
                    <p>Découvrez notre sélection high-tech.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>

    <!-- Section Catégories -->
    <section class="mb-5">
        <h2 class="text-center mb-4"><i class="bi bi-grid"></i> Nos Catégories</h2>
        <div class="row">
            {% for category in categories %}
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <img src="https://picsum.photos/400/250?random={{ category.id }}" class="card-img-top" alt="{{ category.name }}">
                        <div class="card-body text-center">
                            <h5 class="card-title">
                                <a href="{{ path('app_category_show', { 'id': category.id }) }}" class="text-decoration-none text-black">
                                    {{ category.name }}
                                </a>
                            </h5>
                            <p class="card-text text-muted">{{ category.description }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucune catégorie disponible</p>
            {% endfor %}
        </div>
    </section>
    <!-- Section Produits en Vedette -->
    <section>
        <h2 class="text-center mb-4"><i class="bi bi-star-fill text-warning"></i> Produits en Vedette</h2>
        <div class="row">
            {% for product in featuredProducts %}
                <div class="col-md-4">
    <div class="card shadow-sm border-0 text-black h-100">
        <div class="image-container">
            <img src="{{ product.photo ?: 'https://picsum.photos/400/300?random=' ~ product.id }}" 
                 class="card-img-top fixed-img" 
                 height="200px"
                 width="100px"
                 alt="{{ product.name }}">
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">
                <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="text-decoration-none text-black">
                    {{ product.name }}
                </a>
            </h5>
            <p class="card-text text-muted flex-grow-1">{{ product.description }}</p>
            <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="btn btn-primary btn-dark mt-auto">
                Voir le produit
            </a>
        </div>
    </div>
</div>

            {% else %}
                <p class="text-center">Aucun produit en vedette</p>
            {% endfor %}
        </div>
    </section>

</div>
{% endblock %}
