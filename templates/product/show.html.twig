{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
	- Produit
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div
			class="row">
			<!-- Image du produit -->
			<div class="col-md-6">
				<div class="card shadow-sm border-0">
					<img src="https://picsum.photos/600/400?random={{ product.id }}" class="card-img-top img-fluid rounded" alt="{{ product.name }}">
				</div>
			</div>

			<!-- Détails du produit -->
			<div class="col-md-6">
				<div class="card shadow-sm border-0">
					<div class="card-body">
						<h1 class="card-title">{{ product.name }}</h1>
						<p class="text-muted">{{ product.description }}</p>

						<h4 class="fw-bold text-primary">{{ product.price }}
							€</h4>
						<p>
							<strong>Stock :</strong>
							{{ product.stock > 0 ? product.stock ~ ' en stock' : 'Rupture de stock' }}</p>

						<p class="text-muted small">Ajouté le :
							{{ product.createdAt ? product.createdAt|date('d/m/Y H:i') : 'Non disponible' }}</p>

				<!-- Formulaire pour ajouter au panier -->
<div class="mt-4">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if product.stock > 0 %}
            <form action="{{ path('app_cart_item_add', {'id': product.id}) }}" method="POST">
                <div class="input-group">
                    <input type="number" name="quantity" class="form-control" value="1" min="1" max="{{ product.stock }}">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-cart-plus"></i>
                        Ajouter au Panier
                    </button>
                </div>
            </form>
        {% else %}
            <button class="btn btn-secondary" disabled>
                Rupture de stock
            </button>
        {% endif %}
    {% else %}
        <p class="text-muted">Veuillez <a href="{{ path('login') }}">vous connecter</a> pour ajouter ce produit au panier.</p>
    {% endif %}
</div>


						<!-- Boutons d'action -->
						<div class="mt-4">
							<a href="{{ path('app_home') }}" class="btn btn-outline-primary">
								<i class="bi bi-arrow-left"></i>
								Retour à l'accueil
							</a>

							{% if is_granted('ROLE_ADMIN') %}
								<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">
									<i class="bi bi-pencil"></i>
									Modifier
								</a>

								{{ include('product/_delete_form.html.twig') }}
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
