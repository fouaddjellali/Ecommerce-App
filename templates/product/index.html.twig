{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Nos Produits</h1>
        <p class="lead text-muted">Découvrez notre sélection de produits.</p>
    </div>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card shadow-sm border-0 mb-4">
                    <img src="https://picsum.photos/400/250?random={{ product.id }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-dark text-decoration-none">
                                {{ product.name }}
                            </a>
                        </h5>
                        <p class="text-muted small">{{ product.description|slice(0, 80) }}...</p>
                        <p class="fw-bold text-black">{{ product.price }}€</p>
                        <p class="small text-muted">Stock : {{ product.stock }}</p>

                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-primary btn-dark">Voir le produit</a>

                      
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted text-center">Aucun produit disponible.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Boutons de navigation -->
    <div class="mt-4 text-center">
        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
            <i class="bi bi-house"></i> Retour à l'accueil
        </a>
       
    </div>
</div>
{% endblock %}
