{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Catégorie{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4">{{ category.name }}</h1>
        <p class="lead text-muted">{{ category.description }}</p>
    </div>

    <h3 class="mb-3">Produits dans cette catégorie :</h3>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card shadow-sm mb-4 border-0">
                    <img src="https://picsum.photos/400/250?random={{ product.id }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="text-dark text-decoration-none">
                                {{ product.name }}
                            </a>
                        </h5>
                        <p class="text-muted small">{{ product.description|slice(0, 80) }}...</p>
                        <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="btn btn-sm btn-primary">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted">Aucun produit disponible dans cette catégorie.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Boutons de navigation -->
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
            <i class="bi bi-house"></i> Retour à l'accueil
        </a>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                <i class="bi bi-list"></i> Retour à la liste des catégories
            </a>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            {{ include('category/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
{% endblock %}
