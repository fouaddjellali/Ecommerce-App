{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Catégorie{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4">{{ category.name }}</h1>
        <p class="lead text-muted">{{ category.description }}</p>
    </div>
    <div class="row">
        {% for product in products %}
           <div class="col-md-4">
    <div class="card shadow-sm border-0 text-black h-100">
        <div class="image-container">
            <img src="{{ product.photo ?: 'https://picsum.photos/400/300?random=' ~ product.id }}" 
                 class="card-img-top fixed-img" 
                 height="200px"
                 width="100px"
                 alt="{{ product.name }}">
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">
                <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="text-decoration-none text-black">
                    {{ product.name }}
                </a>
            </h5>
            <p class="card-text text-muted flex-grow-1">{{ product.description }}</p>
            <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="btn btn-primary btn-dark mt-auto">
                Voir le produit
            </a>
        </div>
    </div>
</div>
        {% else %}
            <div class="col-12">
                <p class="text-muted">Aucun produit disponible dans cette catégorie.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Boutons de navigation -->
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-outline-dark">
            <i class="bi bi-house text-black"></i> Retour à l'accueil
        </a>

      
    </div>
</div>
{% endblock %}
