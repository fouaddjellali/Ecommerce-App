{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Nos Catégories</h1>
        <p class="lead text-muted">Découvrez toutes nos catégories disponibles.</p>
    </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for category in categories %}
                <div class="col">
                    <div class="card shadow-sm border-0 h-100 d-flex flex-column p-4">
                        <div class="card-body flex-grow-1 text-center">
                            <h5 class="card-title">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="text-dark text-decoration-none fw-bold">
                                    {{ category.name }}
                                </a>
                            </h5>
                            <p class="text-muted small">{{ category.description|slice(0, 80) }}...</p>
                        </div>
                        <div class="text-center">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-dark">
                                Voir la catégorie
                            </a>
                        </div>
                    </div>
                </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted">Aucune catégorie disponible.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Boutons de navigation -->
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-outline-dark">
            <i class="bi bi-house"></i> Retour à l'accueil
        </a>
       
    </div>
</div>
{% endblock %}
