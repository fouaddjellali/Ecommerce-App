{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Nos Catégories</h1>
        <p class="lead text-muted">Découvrez toutes nos catégories disponibles.</p>
    </div>

    <div class="row">
        {% for category in categories %}
            <div class="col-md-4">
                <div class="card shadow-sm border-0 mb-4">
                    <img src="https://picsum.photos/400/250?random={{ category.id }}" class="card-img-top" alt="{{ category.name }}">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="text-dark text-decoration-none">
                                {{ category.name }}
                            </a>
                        </h5>
                        <p class="text-muted small">{{ category.description|slice(0, 80) }}...</p>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-primary">Voir la catégorie</a>
                        
                      
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted">Aucune catégorie disponible.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Boutons de navigation -->
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
            <i class="bi bi-house"></i> Retour à l'accueil
        </a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_category_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter une catégorie
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}
