{% extends 'base.html.twig' %}
{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Connexion</h2>        
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form method="post" action="{{ path('login') }}">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="_username" value="{{ last_username }}" class="form-control" required autofocus>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-dark w-100 text-white">Se connecter</button>
        </form>
        <div class="text-center mt-3">
            <a href="{{ path('forgot_password') }}" class="text-decoration-none text-black">Mot de passe oubli√© ?</a>
        </div>
        <div class="text-center mt-3">
            <a href="{{ path('app_register') }}" class="btn btn-secondary w-100">S'inscrire</a>
        </div>
    </div>
</div>
{% endblock %}
